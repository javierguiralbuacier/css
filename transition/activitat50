<style>
  body {
    font-family: sans-serif;
    padding: 2rem;
    background: #f5f5f5;
  }

  form {
    max-width: 320px;
    margin: auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  input[type="text"],
  input[type="number"] {
    padding: 0.6rem;
    border: 2px solid #ccc;
    border-radius: 6px;
    transition: all 0.25s ease; /* transición suave */
    font-size: 1rem;
  }

  /* Efecto al recibir el foco */
  input[type="text"]:focus,
  input[type="number"]:focus {
    border-color: transparent;
    transform: scale(1.05); /* aumenta ligeramente */
    outline: none;
    box-shadow: 0 0 6px rgba(0,0,0,0.2);
  }

  button {
    padding: 0.7rem;
    border: none;
    border-radius: 6px;
    background: #0077ff;
    color: white;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.25s ease;
  }

  /* El botón pierde su color al pasar el cursor */
  button:hover {
    background: transparent;
    color: #0077ff;
    border: 2px solid #0077ff;
  }
</style>
